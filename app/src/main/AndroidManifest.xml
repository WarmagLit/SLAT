<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tsu.slat">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Slat.NoActionBar"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".presentation.screens.calendar.CalendarActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.screens.sign_up.SignUpActivity"
            android:exported="true"
            android:label="@string/title_activity_sign_up"
            android:theme="@style/Theme.Slat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.screens.client_menu.ClientMenuActivity"
            android:exported="false"
            android:label="@string/title_activity_client_menu" />
        <activity
            android:name=".presentation.screens.nutrition.NutritionActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.screens.sign_in.SignInActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.screens.chat.ChatActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.screens.main.MainActivity"
            android:exported="true"></activity>
    </application>

</manifest>